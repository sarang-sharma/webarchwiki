<div id="banner">
	<h1>Collaboration is the strategy.</h1>
</div>

<div id="articles_wrapper" class="skinny_wrapper">
<form method='post' action='/articles/index' >
	<span class="custom-dropdown big">
		<select name="sort" id="sort" onchange='this.form.submit()'>
		  <option value="recent">Most Recent</option>
		  <option value="views">Most Viewed</option>
		  <option value="alpha">Alphabetically</option>
		</select>
	</span>
</form>
<br><br><br>

<% @articles.each do |article| %>
	<div class="article">
			<p class="date">Published: <%= article.created_at.strftime('%d %b, %Y') %></p>
			<h2><%= link_to article.title, article %></h2>
			<p class="date"><b>Tags:</b> <%= raw article.tag_list %></p>
			<hr>
		</div>
		<% end %>
		
</div>

<!-- For pagination -->
<%= will_paginate @articles %>		

<div id="tag_cloud" class="skinny_wrapper">

<ul class="tags">
	<% tag_cloud Article.tag_counts, %w[s m l] do |tag, css_class| %>
	<li><%= link_to tag.name, tag_path(tag.name), class: css_class %></li>
	<% end %>
	</ul> 
</div>

