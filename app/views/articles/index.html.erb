<h1>Articles#index</h1>

<div id="tag_cloud">
<% tag_cloud Article.tag_counts, %w[s m l] do |tag, css_class| %>
	<%= link_to tag.name, tag_path(tag.name), class: css_class %>
	<% end %>
</div>

<% @articles.each do |article| %>
			<h2><%= link_to article.title, article %></h2>
			<p><b>Tags: <%= raw article.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></b></p>
			<p>Published: <%= article.created_at.strftime('%d %b, %Y') %></p>
			
			
		<% end %>

<!-- For pagination -->
<%= will_paginate @articles %>		

<% if admin_signed_in? %>
	<%= link_to "New Article", new_article_path %>
<% end %>

<ul>
	<li><%= link_to "All Articles", root_path%></li>
<% Category.all.each do |category| %>
			<li><%= link_to category.name, articles_path(category: category.name) %></li>
			
		<% end %>
</ul>	